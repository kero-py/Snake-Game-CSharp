<Application x:Class="SnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#03444d</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#185568</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#12121200</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E3E4ED</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Cascade Mono</FontFamily>
    </Application.Resources>
</Application>
